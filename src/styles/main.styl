    background-image: url('../images/angular-adoption.png') 
    &.bespoke-backdrop-active
      opacity: 1
    background-size:80% 80%
    background-repeat:no-repeat
    background-color:#EDECEC

  &--angularadoption2
    background-image: url('../images/angular-adoption2.png') 
    &.bespoke-backdrop-active
      opacity: 1
    background-size:80% 80%
    background-repeat:no-repeat
    background-color:white
    transition:none

  &--angularadoption3
    background-image: url('../images/angular-adoption3.png') 
    &.bespoke-backdrop-active
      opacity: 1
    background-size:80% 80%
    background-repeat:no-repeat
    background-color:white
    transition:none

  &--angularadoption4
    background-image: url('../images/angular-adoption4.png') 
    &.bespoke-backdrop-active
      opacity: 1
    background-size:65% 80%
    background-repeat:no-repeat
    background-color:white
    transition:none  

  &--clojure
    background-image: url('../images/clojure.jpg')
    &.bespoke-backdrop-active
      opacity: 0.2
  &--petehunt
    filter: grayscale(50%)
    background-image: url('../images/petehunt.jpeg')
    background-position: 50% 0
    transform-origin: 50% 20%
    transition: opacity 1s ease, transform 16s ease
    &.bespoke-backdrop-active
      opacity: 0.2
  &--leebyron
    background-image: url('../images/leebyron.jpeg')
    transform-origin: 50% 40%
    &.bespoke-backdrop-active
      opacity: 0.25
  &--swannodette
    background-image: url('../images/swannodette.jpg')
    background-position: 50% 0
    transform-origin: 60% 40%
  &--raynos
    background-image: url('../images/raynos.jpeg')
    &.bespoke-backdrop-active
      opacity: 0.4
  &--mattesch
    background-image: url('../images/mattesch.png')
    background-position: 0 100%
    transform-origin: 20% 50%
  &--pascalhartig
    background-image: url('../images/pascalhartig.jpeg')
    background-position: 0 20%
    transform-origin: 30% 30%
    transition: opacity 1s ease, transform 16s ease
  &--nicolasgallagher
    background-image: url('../images/nicolasgallagher.jpeg')
    filter: grayscale(100%)
    transform-origin: 50% 40%
    transition: opacity 1s ease, transform 16s ease
  &--yellow
    background: #D2D22E
    &.bespoke-backdrop-active
      opacity: 1
  &--still
    transition: opacity 1s ease
    transform: none
  &--bw
    filter: grayscale(100%)

.yellow
  color: black
  h1
    border-color: currentColor

.light-grey
  h1,h2,h3
    color:black

.red
  h1,h2,h3
    color:red

.bullet.expand
  transition: all 2s ease
  opacity: 0
  overflow-x: hidden
  overflow-y: visible
  max-width: 0
  display: inline-block
  white-space: nowrap
  text-align: center
  line-height: 1.1em
  position: relative
  top: .2em
  &.bespoke-bullet-active
    opacity: 1
    max-width: 500px

.meme-impact
  position:fixed
  left:50%
  font-size: 1.9em
  font-family: Impact, Charcoal, sans-serif
  color:white 
  text-shadow: -1px 0 black, 0 1px black, 2px 0 black, 0 -1px black
  letter-spacing:0px

.marquee 
  width: 110%;
  margin: 0 auto;
  white-space: nowrap;
  overflow: hidden;
  box-sizing: border-box;
  color:white;

.marquee span
    display: inline-block;
    padding-left: 130%;  
    animation: marquee 15s linear infinite;

@keyframes marquee {
    0%   { transform: translate(0, 0); }
    100% { transform: translate(-100%, 0); }
}

.footer-reference {
  position:fixed;
  bottom:0px;
  width:100%
  height:30px;
  color:#ADD809
  left:0px
  font-size:.8em
}

.bold * {
  font-weight:bold
}

.no-italics * {
  font-style:normal
}

.gist {
  text-align: left;
  overflow: scroll;
}
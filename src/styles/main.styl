    background-position: 50% 34%
    &.bespoke-backdrop-active
      opacity: 0.55
  &--nintieswebsite
    background-image: url('../images/90s-website.gif')
    background-position: 50% 34%
    &.bespoke-backdrop-active
      opacity: 0.55    
  
  &--seinfeld
    background-image: url('../images/seinfeld.gif')
    background-position: 50% 80%
    &.bespoke-backdrop-active
      opacity: 1
  
  &--whoa
    background-image: url('../images/whoa.gif')
    background-position: 50% 80%
    &.bespoke-backdrop-active
      opacity: 1

  &--lightning
    background-image: url('../images/lightning.gif')
    &.bespoke-backdrop-active
      opacity: 0.75

  &--crashtest
    background-image: url('../images/crashtest.gif')
    &.bespoke-backdrop-active
      opacity: 1

  &--neverending
    background-image: url('../images/neverending.gif')
    &.bespoke-backdrop-active
      opacity: 1
      
  &--poisonapple
    background-image: url('../images/poisonapple.gif')
    background-position: 50% 80%
    &.bespoke-backdrop-active
      opacity: 0.25
  &--backbonejs
    background-color: white
    background-image: url('../images/backbonejs.png')
    background-size: 30%
    background-repeat: no-repeat
    &.bespoke-backdrop-active

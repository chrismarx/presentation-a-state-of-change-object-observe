@import 'prism/themes/prism-okaidia.css'

pre.small
  font-size: .7em
  padding: 0

sup
  font-size: 0.3em
  position: relative
  top: -1.5em

h1 a
  border: none

h1.name
  font-size: 1.3em
  margin: 0

.angular-shield
  background-image: url('../images/angularjs-shield.png');
  background-repeat: no-repeat;
  background-size: 150px;

.avatar
  filter: grayscale(30%)
  width: 140px
  height: @width
  border-radius: 100%
  margin: .5em 0

.bespoke-slide
  z-index: 1

pre
  padding: 2em !important

pre, code
  margin: 0 !important

.backdrop
  &--orion
    background-image: url('../images/orion.jpg')
    background-position: 0 0
    &.bespoke-backdrop-active
      opacity: 0.4
    &.bespoke-backdrop-before
      transition-delay: 2s

  &--misko
    background-image: url('../images/misko.jpg')
    transform-origin: 50% 40%
    &.bespoke-backdrop-active
      opacity: 0.25

  &--jqueryaccordion
    background-image: url('../images/jquery-accordion.gif')
    background-position: 0 0
    &.bespoke-backdrop-active
      opacity: 0.4
    &.bespoke-backdrop-before
      transition-delay: 2s
          
  &--urkel
    background-image: url('../images/urkel.gif')
    background-position: 0 0
    &.bespoke-backdrop-active
      opacity: 1
    &.bespoke-backdrop-before
      transition-delay: 2s

  &--barkley
    background-image: url('../images/barkley.gif')
    background-position: 0 0
    &.bespoke-backdrop-active
      opacity: 1
    &.bespoke-backdrop-before
      transition-delay: 2s    
              
  &--angrycat
